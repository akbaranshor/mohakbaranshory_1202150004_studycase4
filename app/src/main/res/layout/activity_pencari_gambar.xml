<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.asynctask.PencariGambarActivity"
    android:padding="16dp"
    android:gravity="center|top">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cari Gambar"
        android:textSize="24sp"/>
    <EditText
        android:id="@+id/url_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukkan URL gambar"
        android:ems="15"/>

    <Button
        android:id="@+id/cari_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Klik untuk mencari gambar"
        android:onClick="cari"/>

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
